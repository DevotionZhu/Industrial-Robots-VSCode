{
    "name": "Fanuc",
    "patterns": [
        {
            "include": "#comment"
        },
        {
            "include": "#string"
        },
        {
            "include": "#fcn-call"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#control"
        },
        {
            "include": "#movement"
        },
        {
            "include": "#built-in-var"
        },
        {
            "include": "#built-in-fcn"
        },
        {
            "include": "#built-in-types"
        },
        {
            "include": "#operator"
        }
    ],
    "repository": {
        "built-in-fcn": {
            "patterns": [
                {
                    "match": "(?i)\\b(GP1|MESSAGE|UTOOL|PAUSE|UFRAME_NUM|UTOOL_NUM)\\b",
                    "name": "entity.name.function.c"
                }
            ]
        },
        "built-in-types": {
            "patterns": [
                {
                    "match": "(?i)\\b(DATE|TIME|deg|mm|FINE|UF|UT|J1|J2|J3|J4|J5|J6|J7|J8|X|Y|Z|W|P|R|READ_WRITE)\\b",
                    "name": "storage.type.c"
                }
            ]
        },
        "built-in-var": {
            "patterns": [
                {
                    "match": "(?i)\\b(STACK_SIZE|TASK_PRIORITY|TIME_SLICE|BUSY_LAMP_OFF|ABORT_REQUEST|PAUSE_REQUEST|CONFIG)\\b",
                    "name": "constant.language"
                }
            ]
        },
        "comment": {
            "patterns": [
                {
                    "begin": "!",
                    "end": "(?=\\n)",
                    "name": "comment"
                }
            ]
        },
        "control": {
            "patterns": [
                {
                    "match": "(?i)\\b(PROG_SIZE|CREATE|MODIFIED|FILE_NAME|VERSION|LINE_COUNT|MEMORY_SIZE|PROTECT|TCD|DEFAULT_GROUP|CONTROL_CODE|OWNER|COMMENT|ATTR|PROG)\\b",
                    "name": "keyword.control"
                }
            ]
        },
        "fcn-call": {
            "patterns": [
                {
                    "begin": "CALL",
                    "end": ";",
                    "name": "string"
                }
            ]
        },
        "movement": {
            "patterns": [
                {
                    "match": "(?i)\\b(MN|POS|PR|DO|WAIT|DI|END)\\b",
                    "name": "entity.name.function.preprocessor.c"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "match": "\\b-?\\d+(\\.\\d*)?([eE][+-]?\\d+)?\\b",
                    "name": "constant.numeric.c"
                }
            ]
        },
        "operator": {
            "patterns": [
                {
                    "match": "(?i)\\b([|])\\b",
                    "name": "keyword.operator"
                }
            ]
        },
        "string": {
            "patterns": [
                {
                    "begin": "\"",
                    "end": "\"",
                    "name": "string"
                }
            ]
        }
    },
    "scopeName": "robodk.fanuc"
}